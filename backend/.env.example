# Flask Configuration
FLASK_APP=app
FLASK_ENV=development

# Security Keys (auto-generated on first launch if not set)
# Leave blank or use placeholder values - they will be auto-generated
# Once generated, keep the .env file secure and do NOT commit it to git
SECRET_KEY=
JWT_SECRET_KEY=
ENCRYPTION_KEY=

# Database
# Use absolute path for SQLite (4 slashes for absolute: sqlite:////path/to/db)
# Or relative to backend directory (3 slashes: sqlite:///./data/mc_manager.db)
DATABASE_URL=sqlite:////data/minecraft/data/mc_manager.db

# JWT Token Expiration
JWT_ACCESS_TOKEN_EXPIRES=900  # 15 minutes
JWT_REFRESH_TOKEN_EXPIRES=604800  # 7 days

# Redis Configuration (optional - for JWT token blacklist, falls back to in-memory)
REDIS_URL=redis://localhost:6379/0

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# File Upload
MAX_CONTENT_LENGTH=524288000  # 500MB in bytes
UPLOAD_FOLDER=./data/uploads

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Docker
DOCKER_SOCKET=unix://var/run/docker.sock
MC_SERVER_NETWORK=minecraft-network

# Default Admin
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=changeme
DEFAULT_ADMIN_EMAIL=admin@localhost
